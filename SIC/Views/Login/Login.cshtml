@model SIC.usuarios
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Login</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css">
    <link rel='stylesheet prefetch' href='https://fonts.googleapis.com/css?family=Roboto:400,100,300,500,700,900|RobotoDraft:400,100,300,500,700,900'>
    <link rel='stylesheet prefetch' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css'>
    <link rel="stylesheet" href="~/Content/TLogin/css/style.css">
    <script src="~/Scripts/jquery-1.10.2.js"></script>

    <script>
        //Alert JQuery para campos vacios
        //***La deteccion de la contraseña en blanco no funciona***
        $(document).ready(function () {
            $("#sbutton").on("click", function (e) {
                var nomina = $("#id_Emp").val();
                var con = $("#contraseña_Usu").val();
                if (nomina == "" || con == "")
                {
                    e.preventDefault();
                    alert("Los campos no pueden estar en blanco");
                }
            });
        });

        //Alert JQuery para credenciales incorrectas
        $(document).ready(function () {
            verifyLogin();
        });
        function verifyLogin() {
            if ('@ViewBag.Login' == 'No') {
                alert("Nómina o contraseña incorrecta");
                return false;
            }
        }
    </script>
</head>

<body>
    <br>
    <br>
    <br>
    <br>
    <br>
    <center>
        <img src="~/Content/TLogin/images/logo.png">
    </center>
    <br>
    <br>
    <!-- Form Module-->
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="module form-module">
            <div class="toggle">
            </div>
            <div class="form">
                <h2>Ingresa a tu cuenta</h2>
                <form>
                    @Html.TextBoxFor(a => a.id_Emp, new { placeholder = "Nómina" })
                    @Html.PasswordFor(a => a.contraseña_Usu, new { placeholder = "Contraseña" })
                    <!--<input type="text" placeholder="Nómina" />-->
                    <!--<input type="password" placeholder="Contraseña" />-->
                    <button type="submit" id="sbutton">Login</button>
                </form>
            </div>
            <div class="cta"><a href="#">¿Olvidaste tu contraseña?</a></div>
        </div>
    }
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <center>
        eKontrol © Copyright 2017
    </center>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="~/Content/TLogin/js/index.js"></script>
</body>
</html>


