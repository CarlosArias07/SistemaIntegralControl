@section EditContent{

    <div class="col-md-12">
        <div class="white-box">
            <h3 class="box-title">Registro de Artículos</h3>
            @using (Html.BeginForm("CrearArticulo", "Articulo", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="form">
                    <form>
                        @Html.DropDownListFor(a => a.id_Pro, ViewBag.listpro as SelectList, "SELECCIONAR")
                        @Html.DropDownListFor(a => a.tipo_Pro, ltipo, "SELECCIONAR")
                        @Html.TextBoxFor(a => a.nombre_Pro, new { placeholder = "Nombre", @style = "text-transform:uppercase" })
                        @Html.TextAreaFor(a => a.descripcion_Pro, new { placeholder = "Descripción Técnica", style = "text-transform:uppercase" })
                        @Html.TextBoxFor(a => a.precio_Pro, new { placeholder = "0.00" })
                        <br />
                        @Html.LabelFor(a => a.imagen_Pro)
                        <input type="file" id="img" name="img" />
                        <br />
                        <button type="submit" id="sbutton">Aceptar</button>
                    </form>
                </div>
            }
        </div>
    </div>
}
