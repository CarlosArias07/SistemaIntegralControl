                            grid.Column(columnName: "nombre_Art", header: "ARTICULO"),
                            grid.Column(columnName: "nombrecli_CotIns", header: "CLIENTE"),
                            grid.Column(columnName: "fecha_CotIns", header: "FECHA"),
                            grid.Column(header: "⇨", format: @<text><button id="showModal" class="name btn btn-info" data-id="@item.id_CotIns">Asignar</button></text>)
        //grid.Column(header: "⇨", format: (item) => Html.ActionLink("ASIGNAR", "AsignarCotizacion", new { }))
