@model List<SIC.cotizaciones_info>
@{
    var message = TempData["ConfirmationMessage"] ?? string.Empty;
    ViewBag.Title = "VerCotizacionesAsignacion";
    var grid = new WebGrid(canPage: true, rowsPerPage: 2);
    grid.Bind(source: Model, rowCount: ViewBag.TotalRows, autoSortAndPage: false);
}

@section Scripts{

    <script type="text/javascript">
        var message = '@message';
        if(message)
            alert(message);
    </script>
}

@section ScriptsDT{

    <script>
        $(function () {
            try {
                var dir = $('#dir').val();
                var col = $('#col').val();
                var header = $("th a[href*=" + col + "]");
                if (dir == "Ascending") {
                    header.text(header.text() + " ▲")
                }
                if (dir == "Descending") {
                    header.text(header.text() + " ▼")
                }
            } catch (e) {

            }
        })
    </script>
    <script>
        $(document).on("click", ".name", function () {
                var id_CotIns = $(this).data('id');
                var url = $('#caModal').data('url');
                $.get(url, { id: id_CotIns }, function (data) {
                    $('#caContainer').html(data);
                    $('#caModal').modal('show');
                });
            });
    </script>
}

